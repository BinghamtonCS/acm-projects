<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gabeochoa.wib"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:logo="@drawable/placeholderimage">
        <activity
            android:name="com.gabeochoa.wib.WIB_app"
            android:label="@string/title_activity_wib_app" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gabeochoa.wib.WebViewActivity"
            android:label="@string/title_activity_web_view" >
        </activity>
        <activity
            android:name="com.gabeochoa.wib.FacebookViewActivity"
            android:label="@string/title_activity_facebook_view" >
        </activity>
        <activity
            android:name="com.gabeochoa.wib.AboutView"
            android:label="@string/title_activity_about_view" >
        </activity>
        <activity
            android:name="com.gabeochoa.wib.MembersViewActivity"
            android:label="@string/title_activity_members_view"
            android:parentActivityName="com.gabeochoa.wib.WIB_app" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gabeochoa.wib.WIB_app" />
        </activity>
        <activity
            android:name="com.gabeochoa.wib.CalendarViewActivity"
            android:label="@string/title_activity_calendar_view" >
        </activity>
        <activity
            android:name="com.gabeochoa.wib.PastEventsViewActivity"
            android:label="@string/title_activity_past_events_view" >
        </activity>
    </application>

</manifest>